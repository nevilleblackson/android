<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.gebruiker.football_score_manger.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thuis"
        android:textSize="30dp"
        android:paddingBottom="15dp"
        android:id="@+id/thuis" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="30dp"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:layout_below="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/thuisnummer" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="30dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp"
        android:layout_below="@+id/button3"
        android:layout_alignParentRight="true"
        android:id="@+id/uitnummer" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UIT"
        android:textSize="30dp"
        android:paddingBottom="15dp"
        android:id="@+id/uit"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true" />

    <Button
        android:text="-"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_below="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="51dp"
        android:onClick="decrementTeam1"
        android:id="@+id/button2" />

    <Button
        android:text="+"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignTop="@+id/button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="incrementTeam2"
        android:id="@+id/button3" />

    <Button
        android:text="-"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:onClick="decrementTeam2"
        android:layout_alignTop="@+id/button2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/button4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:textSize="35dp"
        android:id="@+id/min"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="+"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:id="@+id/button"
        android:onClick="incrementTeam1"
        android:layout_below="@+id/thuis"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>