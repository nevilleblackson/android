<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:background="#ada8a8"
    android:id="@+id/evenementenall"
    android:layout_height="match_parent">

    <ImageView
        android:background="#000000"
        android:layout_height="50dp"
        android:layout_width="70dp"
        android:id="@+id/afbeelding"
        android:src="@drawable/evenement1"/>

    <TextView
        android:text="naam"
        android:layout_toRightOf="@id/afbeelding"
        android:textSize="25sp"
        android:textColor="#000000"
        android:paddingLeft="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/naam" />

    <TextView
        android:text="naam"
        android:textSize="18sp"
        android:paddingLeft="25dp"
        android:layout_below="@id/naam"
        android:layout_toRightOf="@id/afbeelding"
        android:textColor="#797373"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tweedenaam" />

</RelativeLayout>