<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:background="#f9f9f9"
    android:id="@+id/evenementenall"
    android:layout_height="match_parent">

        <TextView
            android:text="dag"
            android:paddingLeft="25dp"
            android:textSize="16sp"
            android:paddingTop="20dp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/naam" />

        <ImageView
            android:layout_height="65dp"
            android:layout_width="65dp"
            android:id="@+id/afbeelding"
            android:layout_centerHorizontal="true"
            android:src="@drawable/evenement1"/>

        <TextView
            android:text="0"
            android:layout_alignParentRight="true"
            android:layout_alignBaseline="@id/naam"
            android:textSize="16sp"
            android:paddingRight="10dp"
            android:textColor="#010101"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tweedenaam" />

        <TextView
            android:text="0"
            android:paddingRight="20dp"
            android:layout_toLeftOf="@id/tweedenaam"
            android:layout_alignBaseline="@id/tweedenaam"
            android:textSize="16sp"
            android:textColor="#48494b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tijd" />

</RelativeLayout>