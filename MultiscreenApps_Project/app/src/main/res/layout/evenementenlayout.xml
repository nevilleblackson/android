<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:background="#f9f9f9"
    android:id="@+id/evenementenall"
    android:layout_height="match_parent">

    <ImageView
        android:background="#000000"
        android:layout_height="65dp"
        android:layout_width="65dp"
        android:id="@+id/afbeelding"
        android:src="@drawable/evenement1"/>

    <TextView
        android:text="naam"
        android:layout_toRightOf="@id/afbeelding"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/naam" />

    <TextView
        android:text="naam"
        android:textSize="16sp"
        android:layout_below="@id/naam"
        android:layout_toRightOf="@id/afbeelding"
        android:textColor="#807676"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tweedenaam" />

    <TextView
        android:text="DD/MM/JJJJ"
        android:textSize="16sp"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/afbeelding"
        android:textColor="#193c81"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tijd" />

</RelativeLayout>